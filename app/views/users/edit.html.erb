<h2>Edit User</h2>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, url: {action: "update"} do |f|%>
  <%= f.label :username , "Your user name here", placeholder:"NewUser", :value => "NewUser"%>
  <%= f.text_field :username %><br />
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "example@example.com" %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <%= f.submit "Create" %>
<% end %>